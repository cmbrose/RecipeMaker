<!DOCTYPE html>
<html>
  <head>
    <title>Recipes</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="navbar-collapse collapse justify-content-center" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <%= render partial: 'nav_item', locals: { label: 'Home', href: '/' } %>
        </ul>
        
        <div class="pull-right">
          <%= form_with url: "/home/search", class: "form-inline my-2 my-lg-0 navbar-form pull-right" do |form| %>
            <%= form.text_field :name, class: "form-control mr-sm-2", type: "search" %>
            <%= form.submit 'Search', name: nil, class: "btn btn-secondary my-2 my-sm-0" %>
          <% end %>
        </div>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
